<div class="mat-layout-grid-cell">
    <div class="btn-toolbar" role="toobar">
        <div class="btn-group" role="group">
            @for (var i = 1; i <= 9; i++)
            {
                var num = i;
                <button type="button" id="@($"btn{num}")" class="btn btn-primary" @onclick="() => SetValue(num)">
                    <i class="fa-solid fa-@i"></i>
                </button>
            }
            <button type="button" id="btn0" class="btn btn-primary" @onclick="() => SetValue(null)">
                <i class="fa-solid fa-eraser"></i>
            </button>
        </div>
    </div>
</div>