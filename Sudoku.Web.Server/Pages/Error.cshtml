@page "/error/{statusCode?}"
@model Sudoku.Web.Server.Pages.ErrorModel

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>Error - @Model.StatusCode</title>
    <link href="~/css/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
</head>

<body>
    <div class="main">
        <div class="content px-4">
            <h1 class="text-danger">@Model.StatusMessage</h1>
            <h2 class="text-danger">An error occurred while processing your request.</h2>

            @if (Model.StatusCode == 404)
            {
                <p>The page you requested could not be found.</p>
                @if (!string.IsNullOrEmpty(Model.RequestPath))
                {
                    <p><strong>Path:</strong> <code>@Model.RequestPath</code></p>
                }
            }
            else if (Model.StatusCode >= 500)
            {
                <p>We're experiencing technical difficulties. Please try again later.</p>
            }
            else
            {
                <p>Please check your request and try again.</p>
            }

            @if (Model.ShowRequestId)
            {
                <p>
                    <strong>Request ID:</strong> <code>@Model.RequestId</code>
                </p>
            }

            @if (Model.ShowExceptionDetails && !string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-warning mt-4">
                    <h3>Development Mode - Error Details</h3>
                    <p><strong>Error Message:</strong></p>
                    <p class="text-break">@Model.ErrorMessage</p>
                    
                    @if (!string.IsNullOrEmpty(Model.ExceptionDetails))
                    {
                        <details class="mt-3">
                            <summary><strong>Exception Stack Trace</strong></summary>
                            <pre class="mt-2">@Model.ExceptionDetails</pre>
                        </details>
                    }
                </div>
                
                <div class="alert alert-info mt-3">
                    <p>
                        <strong>Note:</strong> This detailed error information is only visible in Development mode.
                        The Development environment shouldn't be enabled for deployed applications as it can result in displaying sensitive information to end users.
                    </p>
                </div>
            }

            <div class="mt-4">
                <a href="/" class="btn btn-primary">Go to Home</a>
            </div>
        </div>
    </div>
</body>

</html>
