@page "/game/{puzzleId}"

@using Sudoku.Web.Server.Components

<div class="mat-layout-grid">
    <div class="mat-layout-grid-inner">
        <div class="game-view">
            <VictoryDisplay
                IsVictory="@Puzzle.IsSolved()"
                ElapsedTime="@SessionManager.CurrentSession.PlayDuration"/>
            <GameStats />
            <GameBoard
                Puzzle="Puzzle"
                OnCellFocus="HandleSetSelectedCell"
                OnCellChanged="HandleCellChanged"
                NotificationService="CellFocusedNotificationService"/>
            <ButtonGroup
                OnNumberClicked="HandleCellValueChanged"
                PuzzleId="@PuzzleId"
                OnUndo="HandleUndo"
                TotalMoves="@SessionManager.CurrentSession.TotalMoves" />
        </div>
    </div>
</div>